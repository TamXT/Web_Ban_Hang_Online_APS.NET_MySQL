
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Đăng Bài Viết
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-7">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Sản Phẩm Cần Đăng</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @Html.BeginForm() {
                    @Html.AntiForgeryToken();
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên Sản Phẩm</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mô tả tóm tắt</label>
                        @Html.TextArea("Note", "", new { @class="form-control", @id="exampleInputEmail1", @placeholder="Note", @style = "padding:2% 0% 20% 2%" })
                        
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày Đăng</label>
                                @Html.TextBox("Name", "", new { @type = "date", @class="form-control", @id="exampleInputEmail1", @placeholder="Name" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Số Lượng</label>
                                @Html.TextBox("Name", "", new { @type = "number", @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Name" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Kiểm duyệt bài viết</label>

                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Đã kiểm duyệt
                        </label>
                    </div>
                </div>
                }

                <!-- /.box-body -->

            </div>

        </div>
        <!-- right column -->
        <div class="col-md-5">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Hình ảnh sản phẩm</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @Html.BeginForm(){
                    @Html.AntiForgeryToken();

                <div class="box-body">
                    <div class="form-group">
                        <img style="width:100%" src="~/Assets/Client/img/blog-3.jpg" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputFile">File name</label>
                        <input type="file" id="exampleInputFile">
                        <p class="help-block">Example block-level help text here.</p>
                    </div>
                </div>
                <!-- /.box-body -->
                }
            </div>

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        Nội Dung Bài Viết
                    </h3>
                    <!-- tools box -->
                    <div class="pull-right box-tools">
                        <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip"
                                title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body pad">
                    @Html.BeginForm(){
                        @Html.AntiForgeryToken();
                    @Html.TextArea("Place", "", new { @class = "textarea", @placeholder = "Place some text here", @style = "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" })
                    
                    }
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Đăng Bài</button>
            </div>
        </div>
        <!-- /.col-->
    </div>
    <!-- ./row -->
</section>
<!-- /.content -->
<!-- /.content-wrapper -->
